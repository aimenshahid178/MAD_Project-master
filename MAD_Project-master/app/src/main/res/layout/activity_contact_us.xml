<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backstuff"
    android:orientation="vertical"
    tools:context=".ContactUs">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:paddingTop="100dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="@android:color/white"
        android:textSize="30sp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you have any queries, please feel free to reach out to us:"
        android:fontFamily="casual"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/sendemail"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_edttxt"
        android:backgroundTint="	#0176FF"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="145dp"
        android:text=" Email "
        android:textColor="@android:color/white"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/sendcall"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_edttxt"
        android:backgroundTint="	#0176FF"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="145dp"
        android:text=" Call "
        android:textColor="@android:color/white"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/sendtxt"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_edttxt"
        android:backgroundTint="	#0176FF"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="145dp"
        android:text=" Text "
        android:textColor="@android:color/white"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/gomaps"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Whisker's on Google Maps"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:fontFamily="casual"
        android:layout_marginTop="20dp"
        android:clickable="true"/>

</LinearLayout>